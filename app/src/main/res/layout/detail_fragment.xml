<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detail_fragment_id"
                android:background="@android:color/holo_orange_light">


    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="       Contact Details"
        android:id="@+id/textView3"
        android:textSize="16pt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff434244"
        android:textColor="#ffdea116"
        android:textStyle="normal"
        android:textAlignment="@integer/abc_max_action_buttons"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email Contact"
        android:id="@+id/b3"
        android:layout_marginBottom="31dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                    New Text"
        android:id="@+id/textView_Make"
        android:textSize="12pt"
        android:textColor="#ff040392"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                    New Text"
        android:id="@+id/textView_model"
        android:layout_marginTop="53dp"
        android:textSize="12pt"
        android:textColor="#ff071183"
        android:layout_below="@+id/textView_Make"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bnDelete"
        android:layout_alignEnd="@+id/bnDelete"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="                     New Text"
        android:id="@+id/textView_rate"
        android:layout_marginTop="64dp"
        android:textSize="12pt"
        android:textColor="#ff071183"
        android:layout_toEndOf="@+id/b3"
        android:layout_below="@+id/textView_model"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Delete Contact"
        android:id="@+id/bnDelete"
        android:background="#bfad0508"
        android:layout_alignTop="@+id/b3"
        android:layout_toRightOf="@+id/b3"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>